# Configuração do Barramento MODBUS RS485
# Copie este arquivo para .env e ajuste conforme necessário

# Porta Serial
UART_DEVICE=/dev/ttyUSB0

# Parâmetros de Comunicação
BAUDRATE=115200
DATA_BITS=8
PARITY=N
STOP_BITS=1

# Timeout e Retries
MODBUS_TIMEOUT_MS=500
MODBUS_MAX_RETRIES=3
MODBUS_BACKOFF_MS=100

# Endereços dos Dispositivos
CAMERA_ENTRADA_ADDR=0x11
CAMERA_SAIDA_ADDR=0x12
PLACAR_VAGAS_ADDR=0x20

# Matrícula (últimos 4 dígitos)
MATRICULA=6383

# Configurações de Captura LPR
LPR_POLLING_TIMEOUT_MS=2000
LPR_MIN_CONFIDENCE=70

# Debug
DEBUG_MODBUS=1
PRINT_BUFFERS=1
